{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "ES2021",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@middlewares": ["middlewares/index"],
      "@interfaces": ["interfaces/index"],
      "@exceptions": ["exceptions/index"],
      "@modules/*": ["modules/*"]
    },
    "alwaysStrict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    // "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },

  "include": ["src/**/*.ts", "src/helpers/s3Client.helper.ts"],
  "exclude": ["node_modules"]
}
